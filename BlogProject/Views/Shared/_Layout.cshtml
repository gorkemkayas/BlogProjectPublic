        position: relative;
        overflow: hidden;
        }

        .progress-bar::after {
        content: '';
        position: absolute;
        top: 0;
        left: -40%;
        width: 40%;
        height: 100%;
        background: rgba(255, 255, 255, 0.15);
        transform: skewX(-25deg);
        animation: shimmer 2.5s infinite;
