                margin-bottom: 8px;
                text-align: center;
            }

        .feedback-subtitle {
            color: #6c757d;
            font-size: 14px;
            text-align: center;
            margin-bottom: 32px;
        }

        /* Kapatma butonu */
        .close-btn {
            position: absolute;
            top: 16px;
            right: 20px;
            font-size: 28px;
            cursor: pointer;
            color: #6c757d;
            transition: color 0.2s ease;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: transparent;
            border: none;
        }

            .close-btn:hover {
                color: #dc3545;
                background: #f8f9fa;
            }

        /* Textarea */
        .feedback-textarea {
            width: 100%;
            min-height: 120px;
            padding: 16px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 14px;
            font-family: inherit;
            resize: vertical;
            transition: border-color 0.2s ease;
            background: #fff;
            color: #212529;
