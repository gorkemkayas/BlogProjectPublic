        .progress-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background-color: transparent;
            z-index: 9999;
        }

        .progress-bar {
            height: 100%;
            width: 0;
            background: linear-gradient(90deg, #ff3c3c, #ff7b7b); /* zarif kırmızı tonları */
            border-radius: 2px;
            box-shadow: 0 0 6px rgba(255, 60, 60, 0.4);
            transition: width 0.15s ease-out;
            position: relative;
            overflow: hidden;
        }

            .progress-bar::after {
                content: '';
                position: absolute;
                top: 0;
                left: -40%;
                width: 40%;
                height: 100%;
                background: rgba(255, 255, 255, 0.15);
                transform: skewX(-25deg);
                animation: shimmer 2.5s infinite;
            }

        @@keyframes shimmer {
            0% {
                left: -40%;
            }

            100% {
                left: 100%;
            }
        }
    </style>





